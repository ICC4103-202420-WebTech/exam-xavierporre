<h1>New Compliment</h1>

<%= form_with model: @compliment, local: true do |form| %>
  <div>
    <%= form.label :message, "Compliment Message" %><br>
    <%= form.text_field :message, placeholder: "Enter a compliment..." %>
  </div>

  <div>
    <%= form.submit "Create Compliment", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Back to Compliments", root_path, class: "btn btn-secondary" %>
